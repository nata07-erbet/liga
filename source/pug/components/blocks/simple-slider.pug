mixin simple-slider(data)
  .bath-card.bath-card--simple
    .bath-card__slider-wrapper.swiper
      button(aria-label="Предыдущий слайд").bath-card__nav-btn.bath-card__nav-btn--prev
      button(aria-label="Следующий слайд").bath-card__nav-btn.bath-card__nav-btn--next
      .bath-card__nav-icon
        +icon("icon-arrow", 20, 20)
      .bath-card__slider.swiper-wrapper
        each item in data
          .bath-card__slide.swiper-slide(class=(item.video ? "bath-card__slide--video" : ""))
            if (item.video)
              .video-inner(data-player="container", data-rotate-video="")
                +btn-play-with-text(item.buttonText)(data-player="button")
                .video-inner__block
                  video(data-video-src=item.srcDesktop src="/" preload="auto" data-player="desktop" data-src="desktop" controls)
                  //- video(data-video-src=item.srcMobile src="/" preload="auto" data-player="mobile" data-src="mobile" controls)
                .video-inner__cover(data-player="prev")
                  video(data-video-src=item.srcDesktopPrev src="/" preload="auto" muted autoplay loop playsinline data-src="desktop")
                  video(data-video-src=item.srcMobilePrev src="/" preload="auto" muted autoplay loop playsinline data-src="mobile")
            else
              +picture("slides/" + item.path + "/desktop", item.name, "slides/" + item.path + "/mobile", item.name, "jpg", 800, 449, item.alt)
      .bath-card__pagination
