block main
  .page-content
    div(data-animate)
      section.inner-intro.fib.d-200
        .container
          .inner-intro__heading
            h2.subtitle восстановление здоровья
            +specifications([{name: "Вмещает баня", value: "До 6 человек"},{name: "длится программа", value: "4 часа"},{name: "площадь бани", value: "98 м<sup>2</sup>"}]).inner-intro__specifications.text.text--small-caps-2.text--color-not-opacity
          h1.inner-intro__title.title.title.title--xl Баня &laquo;Знахарь&raquo;
          .inner-intro__info-block
            p.inner-intro__info
              span.text.text--small-caps вместимость
              span.text.text--small-caps до 6 человек
            p.inner-intro__info
              span.text.text--small-caps длительность программы
              span.text.text--small-caps 4 часа
            p.inner-intro__info
              span.text.text--small-caps площадь
              span.text.text--small-caps 98 м#[sup 2]
          p.inner-intro__description.text.text--body.text--desktop Дубовая парная с&nbsp;ароматами сибирского разнотравья и&nbsp;звукотерапия в&nbsp;специальной фито-комнате.
