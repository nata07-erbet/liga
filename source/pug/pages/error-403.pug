extends ../components/base/layout

block variables
  - const title = 'Страницы не существует' //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = false
  - const footerMods = ""
  - const currentUrl = "" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    .page-content(data-animate)
      section.error-404.fib
        .container
          h2.subtitle доступ запрещен
          h1.title.error-404__title
            span.accent.error-404__accent Ошибка 403 —
            | доступ запрещен
          p.text.text--body.error-404__text У вас&nbsp;нет&nbsp;прав для&nbsp;просмотра этой&nbsp;страницы, воспользуйтесь меню&nbsp;сайта или&nbsp;перейдите на&nbsp;главную страницу.
          +btn({text: "перейти на главную", href: "index.html"}).error-404__btn

block modals
  +modal("modal--no-scale modal--call")(data-modal="call")
    +modal-call()
