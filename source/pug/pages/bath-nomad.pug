          +accordion(dataAccordion)
        .container
          +price()
          +btn({tag: "a", href: "booking.html?nomad", text: "забронировать баню"}).program-section__button
          +btn({type: "button", text: "Получить консультацию"})(data-open-modal="call").program-section__button-call
