              li.additional-products__item.additional-products__item--shelf
                p.additional-products__name.title.title--xxs-2 Дубовая полка
                p.additional-products__price.text.text--body 15 000 ₽
              li.additional-products__item.additional-products__item--shelf
                p.additional-products__name.title.title--xxs-2 Можжевеловая полка
                p.additional-products__price.text.text--body 20 000 ₽
              li.additional-products__item.additional-products__item--other
                p.additional-products__name.title.title--xxs-2 Байкальская прорубь
                p.additional-products__price.text.text--body 30 000 ₽
              li.additional-products__item.additional-products__item--other
                p.additional-products__name.title.title--xxs-2 Ведро льда
                p.additional-products__price.text.text--body 1 000 ₽
              li.additional-products__item.additional-products__item--steam
                p.additional-products__name.title.title--xxs-2 Авторское парение от&nbsp;идеолога Siberia Сергея Нестерова
                p.additional-products__price.text.text--body 30 000 ₽

            ul.additional-products__list
              li.additional-products__item.additional-products__item--massage
                p.additional-products__name.title.title--xxs-2 Парение вениками в 4 руки
                p.additional-products__price.text.text--body 3 000 ₽
              li.additional-products__item.additional-products__item--massage
                p.additional-products__name.title.title--xxs-2 Парение вениками в 6 рук
                p.additional-products__price.text.text--body 5 000 ₽
              li.additional-products__item.additional-products__item--massage
